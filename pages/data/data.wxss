/* main */
.pay-hint-content{
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 10px;
  font-size: 13px;
  color: #888;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
  /* // 通过以上四行实现收缩功能 */
}
.ellipsis{
  -webkit-line-clamp:3; 
  /* // 最多显示3行 */
  opacity: 0.75 
  /* // 透明度75% */
}
.unellipsis{
  -webkit-line-clamp:0; 
  /* // 全部显示 */
  opacity: 1 

}

