/* 底部菜单 */
.footer-menu{
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  color: #999999;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0px;
  margin: 0px;
  font-size: 14px;
}
.footer-menu view:nth-of-type(1){
  margin-left: 30rpx;
  border: none;
  padding: 0;
}
.footer-menu view{
  width: 160rpx;
  border-left: 1px solid #999;
  text-align: center;
}
.footer-menu view:nth-last-of-type(1){
  background: #21B97A;
  width: 260rpx;
  text-align: center;
  color: #fff;
  padding: 0
}

.footer-menu view:nth-of-type(2){
  position: relative;
}
.footer-menu view:nth-of-type(2) button{
  position: absolute;
  opacity: 0;
  top: 0;  
}
.footer-menu view:nth-of-type(3){
  position: relative;
}
.footer-menu view:nth-of-type(3) button{
  position: absolute;
  opacity: 0;
  top: 0;  
}