/* pages/my/my.wxss */


page{
	background-color:#f1f1f1;
	font-size: 30rpx;
}
.header {
  background: #fff;
  height: 290rpx;
  padding-bottom: 110rpx;
}

.bg {
  width: 100%;
  height: 200rpx;
  padding-top: 100rpx;
  background-color: #4191ea;
}

.box {
  width: 650rpx;
  /* height: 280rpx; */
  height: 170rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0 5rpx 20rpx 0rpx rgba(0, 0, 150, 0.2);
}

.box-hd {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;

}

.avator {
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border: 5rpx solid #fff;
  border-radius: 50%;
  margin-top: -80rpx;
  overflow: hidden;
}

image {
  width: 100%;
  height: 100%;
}

.userNickName {
  width: 100%;
  text-align: center;
}

.box-bd {
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: center;
}

.item {
  flex: 1 1 auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  border-right: 1rpx solid #f1f1f1;
  margin: 15rpx 0;
}

:last-child {
  border: none;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}

image {
  width: 100%;
  height: 100%;
}

.text {
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}

.list-content {
  background: #fff;
}

.list {
  width: 100%;
  border-bottom: 15rpx solid #f1f1f1;
  background: #fff;
}

:last-child {
  border: none;
}

.li {
  width: 92%;
  height: 100rpx;
  padding: 0 4%;
  border-bottom: 1rpx solid rgb(243, 243, 243);
  display: flex;
  align-items: center;
}

.noborder {
  border-bottom: 0;
}

.icon {
  flex-shrink: 0;
  width: 50rpx;
  height: 50rpx;
}

/* image {
  width: 50rpx;
  height: 50rpx;
} */

.text {
  padding-left: 20rpx;
  width: 100%;
  color: #666;
}

.to {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
}

button{

  margin-top: 30px;
  width: 90%;
}